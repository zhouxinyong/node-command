#!/usr/bin/env node

var program = require('commander');

//命令版本号
program.version('0.0.1');

//help命令
program.command('help')
		.description('显示帮助信息')
		.action(function(){
			program.outputHelp();
		});


//creat命令
program.command('create [dir]')
		.description('创建一个空的博客')
		.action(function(dir){
			cosole.log( 'create %s', dir );
		});


//preview命令
program.command('preview [dir]')
		.description('实时预览')
		.action(require('../lib/cmd_preview'));


//build命令
program.command('build [dir]')
		.description('生成整站静态HTML')
		.option( '-o, --output <dir>','生成静态HTML存放目录')
		.action(function(dir, options){
			console.log( 'create %s,output %s',dir,options.output);
		});

//开始解析命令
program.parse(process.argv);
